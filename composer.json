{
    "name": "blomstra/federation",
    "description": "Activitypub, federation implementation for Flarum.",
    "keywords": [
        "fediverse", "activitypub", "mastodon", "federation",
        "flarum", "blomstra", "extension"
    ],
    "license": "mit",
    "type": "flarum-extension",
    "authors": [
        {
            "name": "DaniÃ«l Klabbers",
            "email": "daniel@klabbers.email",
            "homepage": "https://luceos.com"
        }
    ],
    "require": {
        "php": ">= 8.0",
        "flarum/core": "^1.6.1",
        "fof/oauth": "*",
        "landrok/activitypub": "^0.5.8"
    },
    "autoload": {
        "psr-4": {
            "Blomstra\\Federation\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^6.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Blomstra\\Federation\\Tests\\": "tests/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Federation",
            "category": "feature",
            "icon": {
                "image": "resources/assets/logo.png",
                "backgroundColor": "#E3E7F1",
                "backgroundSize": "60%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center"
            }
        },
        "extiverse": {
            "discuss": "https://discuss.flarum.org/d/?"
        }
    }
}
